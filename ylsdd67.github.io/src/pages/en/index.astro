---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RecentPosts from '../../components/RecentPosts.astro';
import { site } from '../../config/site';
---

<BaseLayout
	title={site.name}
	description="Personal site and notes on test automation: Playwright, Robot Framework, Python, and JavaScript."
	locale="en"
>
	<section class="grid gap-8 md:grid-cols-[140px_1fr] md:items-center">
		<img
			class="h-28 w-28 rounded-2xl object-cover shadow-sm shadow-slate-200/60 dark:shadow-black/20"
			src={site.avatar}
			alt="Aristotle avatar"
			loading="lazy"
		/>
		<div>
			<h1 class="text-3xl font-semibold tracking-tight">{site.name}</h1>
			<p class="mt-2 text-slate-700 dark:text-slate-300">{site.taglineEn}</p>
			<p class="mt-4 text-slate-600 dark:text-slate-400">{site.bioEn}</p>
		</div>
	</section>

	<RecentPosts locale="en" limit={10} />
</BaseLayout>
