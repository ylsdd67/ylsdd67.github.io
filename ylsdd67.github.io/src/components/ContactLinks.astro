---
import { contacts, site } from '../config/site';

const { showWechatQr = true } = Astro.props as { showWechatQr?: boolean };

const items = [
	{ label: 'Email', href: contacts.email },
	{ label: 'LinkedIn', href: contacts.linkedin },
	{ label: 'GitHub', href: contacts.github },
	{ label: 'YouTube', href: contacts.youtube },
	{ label: 'X / Twitter', href: contacts.x },
	{ label: 'Bilibili', href: contacts.bilibili },
];
---

<div class="grid gap-3">
	<div class="grid gap-2 sm:grid-cols-2">
		{items.map((item) => (
			<a
				class="rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 hover:shadow-sm dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300"
				href={item.href}
				target={item.href.startsWith('mailto:') ? undefined : '_blank'}
				rel={item.href.startsWith('mailto:') ? undefined : 'noreferrer'}
			>
				<span class="font-medium text-slate-900 dark:text-slate-100">{item.label}</span>
				<span class="ml-2 text-slate-500 dark:text-slate-400">{item.href}</span>
			</a>
		))}
	</div>

	{showWechatQr ? (
		<div class="mt-2 rounded-2xl border border-slate-200 bg-white p-4 dark:border-slate-800 dark:bg-slate-900/40">
			<p class="text-sm font-medium text-slate-900 dark:text-slate-100">WeChat</p>
			<p class="mt-1 text-sm text-slate-600 dark:text-slate-400">Scan the QR code (replace placeholder later).</p>
			<img class="mt-3 h-48 w-48 rounded-xl ring-1 ring-slate-200 dark:ring-slate-800" src={site.wechatQr} alt="WeChat QR" loading="lazy" />
		</div>
	) : null}
</div>
